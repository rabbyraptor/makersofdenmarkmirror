<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MakersOfDenmark</title>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>

<body>
    <header>
        <!-- Navbar Start -->
        <div class="navigation">
            <div class="nav-container">
                <div class="brand">
                    <a asp-controller="home" asp-action="index"><img src="/img/Logo_white.svg" width="100" height="70"
                            title="MakersOfDenmark" alt=""></a>
                </div>
                <nav>
                    <div class="nav-mobile"><a id="nav-toggle" href="#"><span></span></a></div>
                    <ul class="nav-list">
                        <li>
                            <a asp-controller="vaerksted">VÆRKSTED</a>
                        </li>
                        <li>
                            <a asp-controller="aktiviteter">AKTIVITETER</a>
                        </li>
                        <li>
                            <a asp-controller="blog">BLOG</a>
                        </li>
                        <li>
                            <a asp-controller="forum">FORUM</a>
                        </li>
                        <li>
                            <a asp-controller="faq">FAQ</a>
                        </li>
                        <li>
                            <a asp-controller="login">LOG IN</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Start -->
    <footer>
        <div class="footer-grid">
            <div class="links-footer">
                <ul>
                    <h4>LINKS</h4>
                    <li><a asp-controller="vaerksted">Værksted</a></li>
                    <li><a asp-controller="aktiviteter">Aktiviteter</a></li>
                    <li><a asp-controller="blog">Blog</a></li>
                    <li><a asp-controller="forum">Forum</a></li>
                    <li><a asp-controller="faq">FAQ</a></li>
                </ul>
            </div>
            <div class="kontakt-footer">
                <ul>
                    <h4>KONTAKT OS</h4>
                    <li>Seebladsgade 1, 5000 Odense C</a></li>
                    <li><span>Email:&nbsp;</span><a href="info@makersofdenmark.dk">info@makersofdenmark.dk</a></li>
                    <li><span>Telefon:&nbsp;</span>50 50 40 22</a></li>
                </ul>
            </div>
            <div class="social-icons">
                <a href="#" class="fa fa-facebook"><img src="/img/Facebook.png" title="Facebook" alt="facebook"></a>
                <a href="#" class="fa fa-linkedin"><img src="/img/LinkedIn.png" title="LinkedIn" alt="linkedin"></a>
                <a href="#" class="fa fa-twitter"><img src="/img/Twitter.png" title="Twitter" alt="twitter"></a>
            </div>
            <div class="logo-link">
                <a asp-controller="home"><img src="/img/Logo_white.svg" title="MakersOfDenmark" alt=""></a>
            </div>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
